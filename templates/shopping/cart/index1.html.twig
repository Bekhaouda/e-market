{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    
  {% if items | length > 0 %}
         
          <table class="table">
          <thead>
          <tr><th>Produit</th>
              <th>Prix</th>
              <th>Quantite</th>
              <th>total</th>
           </thead>
          <tbody>
          {% for item in items %}
                <tr>
                <td>{{item.product.name}}</td>
                <td>{{item.product.price}}</td>
                <td>{{item.quantity}}</td>
                <td>{{item.product.price * item.quantity}}</td>
                <td>
                <a href ={{path('cart_remove',{'id':item.product.id})}}
                <i class="fa btn-danger btn-smfa-trash" ></i></a>
                </td>
                </tr>
                
          {% endfor %}
             <tr>
                
                <td colspan="3">Total</td>
                <td class="text-right" >{{total}}</td>
                </tr>
          </tbody>

        
          </table>
  {% else %}
    <p>Surprise, c'est vide !</p>
  {% endif %}
    
{% endblock %}
