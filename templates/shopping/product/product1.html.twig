{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}


<section>
    <div class="container">
        <div class="row">
            
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Category</h2>
                     {% for category in categorys %}
                    <div class="panel-group category-products" id="accordian"><!--category-productsr-->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordian" href="#sportswear">
                                        <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                        <a href ="{{path('products_category',{'id':category.id})}}"> {{ category.name }}  </a>                                 
                                    </a>
                                 </h4>
                            </div>
                  
                        </div>
                    </div>
                   {% endfor %}     
                     
                </div>
            </div>
            
            
            <div class="col-sm-9 padding-right">
                <div class="features_items"><!--features_items-->
                    <h2 class="title text-center">Details Product {{product.name}}</h2>
                    
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                    
                                    <table class="table table-condensed">
                                    <thead>
                                        <tr class="cart_menu">
                                            <td class="image">Item</td>
                                            <td class="description">Description</td>
                                            <td class="price">Price</td>
                                            <td class="quantity">Quantity</td>
                                            
                                            
                                        </tr>
                                    </thead>
                                                    
                                    <tbody>
                                    {% for photo in product.getPhotos() %}    
                                     <tr>
                                       <td class="cart_product">
                                        <img alt="Embedded Image" src="{{asset(photo) }}" width="70" height="60" />
                                        </td>
                                        
                                        <td class="cart_description">
                                    
                                            <h2>description: {{product.description}}</h2>
                                            
                                        </td> 


                                        <td class="cart_price">
                                            <h2><span>$</span>{{product.price}}</h2>
                                        </td>

                                        <td class="cart_quantity">
                                            <h2>{{product.quantity}}</h2>
                                                
                                        </td>


                                     </tr>
                                    {% endfor %}
                                   </tbody>
				</table>
    
    

                                <div class="product-overlay">
                                    <div class="overlay-content">
                                        <h2><span>$</span>{{product.price}}</h2>
                                        <p>{{product.name}} </p>
                                        <a href="{{path('cart_add',{'id':product.id})}}" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        
                                    
                                    </div>
                                </div>    






                            </div>
                            
                        </div>
                    </div>
                 
                    
                    
                    
           
        </div>
    </div>
</section>
{% endblock %}
